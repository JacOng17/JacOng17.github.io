    <button type="button" class="btn btn-primary" onclick = "location.href = '{{ site.baseurl }}/index.html';">Primary</button>
      
      <!-- Indicates a successful or positive action -->
     <button type="button" class="btn btn-success" onclick = "location.href = '{{ site.baseurl }}/_pages/about.md';">About</button>
  
